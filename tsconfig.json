{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@contexts/*": [
        "src/contexts/*",
        "contexts/*"
      ],
      "@components/*": [
        "src/components/*",
        "components/*"
      ],
      "@components-root/*": [
        "components/*"
      ],
      "@utils/*": [
        "src/utils/*",
        "utils/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}